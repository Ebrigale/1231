import random

def guess_the_number():
    target_number = random.randint(1, 100)
    max_attempts = 5
    attempts = 0

    print("Добро пожаловать в игру!!! 'Угадай число'!")
    print(f"Я загадал число от 1 до 100. У вас есть {max_attempts} попыток.")

    while attempts < max_attempts:
        user_guess = int(input("Попробуйте угадать: "))
        attempts += 1

        if user_guess < target_number:
            print("Загаданное число больше.")
        elif user_guess > target_number:
            print("Загаданное число меньше.")
        else:
            print(f"Поздравляю! Вы угадали число {target_number} за {attempts} попыток.")

    print("Вы исчерпали все попытки. Правильный ответ был:", target_number)
    return 

def math_quiz():
    number1 = random.randint(1, 10)
    number2 = random.randint(1, 10)
    operators = ['+', '-', '*']
    operator = random.choice(operators)
    result = 0

    print("Решите математическую задачу:")
    print(f"{number1} {operator} {number2} = ?")

    user_answer = int(input("Ваш ответ: "))

    if operator == '+':
        result = number1 + number2
    elif operator == '-':
        result = number1 - number2
    elif operator == '*':
        result = number1 * number2

    if user_answer == result:
        print("Правильно! Вы заработали 20 очков.")
        return 20
    else:
        print(f"Неправильно. Правильный ответ: {result}")
        return 0

def word_guess():
    words = ["яблоко", "банан", "вишня", "апельсин", "груша"]
    random_word = random.choice(words)

    print("Угадайте загаданное слово из фруктов.")
    user_guess = input("Ваш ответ: ")

    if user_guess.lower() == random_word:
        print(f"Правильно! Вы заработали 15 очков.")
        return 15
    else:
        print(f"Неправильно. Правильный ответ: {random_word}")
        return 0

def main():
    score = 0

    print("Добро пожаловать в сложную рандомную игру!")

    while True:
        print("Выберите задание:")
        print("1. 'Угадай число'")
        print("2. Математическая головоломка")
        print("3. Угадай слово")
        print("4. Выход")

        choice = input("Введите номер задания (1/2/3/4): ")

        if choice == '1':
            score += guess_the_number()
        elif choice == '2':
            score += math_quiz()
        elif choice == '3':
            score += word_guess()
        elif choice == '4':
            print(f"Спасибо за игру! Ваши общие очки: {score}")
            break
        else:
            print("Неправильный выбор. Попробуйте снова.")

if __name__ == "__main__":
    main()
